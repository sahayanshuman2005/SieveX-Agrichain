{
  "name": "agri-supply-chain-simplified",
  "version": "1.0.0",
  "description": "Simplified Blockchain-based Agricultural Supply Chain Management (No IoT)",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "compile": "hardhat compile",
    "deploy:local": "hardhat run scripts/deploy.js --network localhost",
    "deploy:testnet": "hardhat run scripts/deploy.js --network goerli",
    "test": "hardhat test",
    "web:serve": "node server.js",
    "setup": "npm install && npm run compile",
    "clean": "hardhat clean",
    "node": "hardhat node"
  },
  "dependencies": {
    "@nomiclabs/hardhat-etherscan": "^3.1.7",
    "@openzeppelin/contracts": "^4.9.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "hardhat": "^2.17.1",
    "path": "^0.12.7"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.2.3",
    "@nomiclabs/hardhat-waffle": "^2.0.6",
    "@types/node": "^20.4.5",
    "chai": "^4.3.7",
    "ethereum-waffle": "^4.0.10",
    "ethers": "^5.8.0",
    "nodemon": "^3.0.1"
  },
  "keywords": [
    "blockchain",
    "agriculture",
    "supply-chain",
    "smart-contracts"
  ],
  "author": "Agricultural Supply Chain Team",
  "license": "MIT"
}
